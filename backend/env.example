APP_ENV=dev
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# BM25 Search Configuration
RAG_BM25_ENABLED=true

# Dense RAG Configuration (disabled for MVP)
RAG_DENSE_ENABLED=false

# Embedding Configuration
EMBEDDING_BACKEND=bge-m3
# Alternative: openai for OpenAI-compatible API

# Vector Store Configuration  
INDEX_PATH=./storage/faiss
TOP_K=6

# OpenAI API Configuration
LLM_PROVIDER=openai_compatible
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-3.5-turbo

# Database Configuration (SQLite)
DATABASE_PATH=chatbot.db

